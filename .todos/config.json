{
  "todoSystem": {
    "enabled": true,
    "scanInterval": "1h",
    "autoAssign": true,
    "notifications": {
      "slack": false,
      "email": false
    },
    "priorities": {
      "CRITICAL": {
        "color": "RED",
        "label": "Блокирующие",
        "blockCommit": true
      },
      "HIGH": {
        "color": "ORANGE",
        "label": "Важные",
        "blockCommit": false
      },
      "MEDIUM": {
        "color": "YELLOW",
        "label": "Средние",
        "blockCommit": false
      },
      "LOW": {
        "color": "GREEN",
        "label": "Косметические",
        "blockCommit": false
      }
    },
    "filePatterns": {
      "backend": ["*.go", "*.py", "*.java"],
      "frontend": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "devops": ["*.sh", "*.yml", "*.yaml", "Dockerfile"]
    },
    "excludePatterns": [
      "node_modules/**",
      ".git/**",
      "dist/**",
      "build/**",
      ".next/**",
      ".cache/**"
    ]
  }
}
